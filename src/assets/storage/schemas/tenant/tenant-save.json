{
  "$id": "tenant-save",
  "title": "Save one Tenant",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "tenant#/definitions/id"
    },
    "name": {
      "$ref": "tenant#/definitions/name"
    },
    "email": {
      "$ref": "user#/definitions/email"
    },
    "subdomain": {
      "$ref": "common#/definitions/subdomain"
    },
    "address": {
      "$ref": "common#/definitions/address"
    },
    "components": {
      "$ref": "tenant-components#/definitions/components"
    },
    "support": {
      "$ref": "common#/definitions/tenantSupport"
    },
    "corporateName": {
      "type": "string",
      "sanitize": "mongo"
    },
    "website": {
      "type": "string",
      "sanitize": "mongo"
    },
    "rcs": {
      "type": "string",
      "sanitize": "mongo"
    },
    "capital": {
      "type": "number",
      "sanitize": "mongo"
    },
    "siret": {
      "type": "number",
      "sanitize": "mongo",
      "pattern": "^[0-9]{14}$"
    },
    "legalStatus": {
      "type": "string",
      "sanitize": "mongo"
    }
  },
  "required": [
    "name",
    "email",
    "subdomain"
  ]
}
